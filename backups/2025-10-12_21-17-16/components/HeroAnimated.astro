---
const badge = "JCS — Accounts, HR & Compliance";
const title = "Accounts, HR & Compliance for MSMEs in Delhi-NCR";
const lead  = "GST, Payroll, PF/ESI, ITR, Legal Support — handled by one trusted team with 15+ years of experience.";
---
<section class="hero hero-anim reveal" style="background-image:url('/images/hero-poster.jpg')">
  <div class="wrap">
  <div class="layer l1"></div>
  <div class="layer l2"></div>
  <div class="grain"></div>
  <div class="overlay" style="position:relative;z-index:1;max-width:980px;margin-inline:auto;padding:2.2rem 1rem">
    <span class="badge">{badge}</span>
    <h1>{title}</h1>
    <p class="lead">{lead}</p>
    <div class="cta">
      <a href="/contact" class="btn btn-primary btn-magnetic mag">Book a Call</a>
      <a href="https://api.whatsapp.com/send?phone= 919821101440&text={ENC}" rel="noopener" class="btn btn-secondary btn-magnetic mag">WhatsApp Us</a>
    </div>
  </div>
  </div>
</section>

<!-- @hero-rotator -->
<section class="hero r" aria-label="Hero">
  <div class="wrap">
  <div class="hero-wrap">
    <h1 class="hero-title">Stop <span data-scramble="Penalties|Interest|Anxiety">Penalties</span>, File On Time.</h1>
    <p class="hero-sub">GST, Payroll & Compliance handled — so you don’t stress.</p>
    <div class="cta-row">
      <a class="btn mag" href="https://api.whatsapp.com/send?phone= 919821101440&text={ENC}" rel="noopener">WhatsApp Us</a>
      <a class="btn ghost mag" href="/tools/gst-calculator">Compliance Checklist</a>
    </div>
  </div>
  <div class="scroll-cue" aria-hidden="true"><span></span></div>
  </div>
</section>
<style>
  .hero{padding:clamp(36px,8vw,96px) 0;text-align:center;position:relative}
  .hero-title{font-size:clamp(28px,6.4vw,64px);line-height:1.05}
  .hero-sub{margin-top:10px;opacity:.8}
  .cta-row{display:inline-flex;gap:12px;margin-top:16px}
  .btn{padding:10px 16px;border-radius:10px;border:1px solid currentColor;text-decoration:none}
  .btn.ghost{background:transparent}
  .mag{position:relative}
  .scroll-cue{position:absolute;left:50%;bottom:12px;transform:translateX(-50%)}
  .scroll-cue span{display:block;width:22px;height:36px;border:2px solid currentColor;border-radius:16px;position:relative;opacity:.6}
  .scroll-cue span::after{content:"";position:absolute;left:50%;top:6px;width:4px;height:8px;border-radius:2px;transform:translateX(-50%);background:currentColor;animation:cue 1.8s infinite}
  @keyframes cue{0%{opacity:0;transform:translate(-50%,0)}40%{opacity:1}100%{opacity:0;transform:translate(-50%,10px)}}
  @media(prefers-reduced-motion:reduce){.scroll-cue span::after{animation:none}}
</style>
<script is:inline>
  const ro=matchMedia('(prefers-reduced-motion: reduce)').matches;
  const words=['Penalties','Interest','Anxiety'];
  const rot=document.currentScript.parentElement.querySelector('.rotator');
  if(rot && !ro){let i=0; setInterval(()=>{i=(i+1)%words.length; rot.textContent=words[i];},1800);}
  const m=document.currentScript.parentElement.querySelector('.mag');
  if(m && matchMedia('(pointer:fine)').matches){
    const clamp=(v,l,h)=>Math.max(Math.min(v,h),l);
    m.addEventListener('mousemove',e=>{const b=m.getBoundingClientRect();
      const x=clamp((e.clientX-b.left-b.width/2)/10,-20,20);
      const y=clamp((e.clientY-b.top-b.height/2)/10,-20,20);
      m.style.transform=`translate(${x}px,${y}px)`;});
    m.addEventListener('mouseleave',()=>{m.style.transform='';});
  }
</script>
<!-- /@hero-rotator -->

<!-- ROTATOR START -->
<div class="hero-rotator r" style="position:relative;padding:2.25rem 0 3.5rem 0">
  <h1 style="font-size:clamp(32px,6vw,54px);line-height:1.05;margin:0 0 .75rem 0">
    Stop <span id="rotator-word" data-words="[\"Penalties\",\"Delays\",\"Interest\"]" style="display:inline-block;transition:opacity .18s ease">Penalties</span>, File on Time.
  </h1>
  <p style="opacity:.8;margin:0 0 1rem 0">Fast, compliant GST • ITR • Payroll setup for growing businesses.</p>
  <div style="display:flex;gap:.75rem;flex-wrap:wrap">
    <a class="magnetic" href="https://api.whatsapp.com/send?phone= 919821101440&text={ENC}" rel="noopener" target="_blank" style="padding:.8rem 1rem;border-radius:10px;background:var(--btn, #111);color:#fff;text-decoration:none">WhatsApp Us</a>
    <a class="magnetic" href="/tools/gst-calculator" style="padding:.8rem 1rem;border-radius:10px;border:1px solid rgba(0,0,0,.15);text-decoration:none">Free GST Calculator</a>
  </div>
  <a href="#main-content" class="scroll-cue" aria-label="Scroll"></a>
</div>
<!-- ROTATOR END -->

<!-- HERO ROTATOR (auto-inserted) -->
<div class="hero-rotor r" style="text-align:center; margin:24px 0;">
  <h1 style="margin:0; font-size:clamp(28px,6vw,48px); line-height:1.1;">
    Stop Penalties, File <span class="word-rotator" data-words='["on Time","Every Month","Confidently"]'></span>
  </h1>
  <div class="scroll-cue" aria-hidden="true" style="margin-top:14px;"></div>
</div>
<!-- /HERO ROTATOR -->
