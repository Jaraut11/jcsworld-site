---
import Base from '../../layouts/Base.astro';
---
<Base title="Accounts & Tax Services - GST, TDS, ITR Filing | JCS Delhi-NCR">
<style>
*{box-sizing:border-box}body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;line-height:1.6;color:#1f2937;margin:0;background:#fafafa}
.hero{background:linear-gradient(135deg,#1e40af 0%,#7c3aed 100%);color:#fff;padding:100px 20px 80px;text-align:center}
.hero h1{font-size:2.8rem;margin:0 0 20px;font-weight:700;line-height:1.2}
.hero .subtitle{font-size:1.3rem;opacity:.95;max-width:700px;margin:0 auto 30px;font-weight:400}
.hero .stats{display:flex;gap:40px;justify-content:center;margin-top:40px;flex-wrap:wrap}
.hero .stat{text-align:center}.hero .stat strong{display:block;font-size:2.5rem;font-weight:700;margin-bottom:5px}
.hero .stat span{font-size:.95rem;opacity:.9}
.container{max-width:1100px;margin:0 auto;padding:0 20px}
.section{padding:80px 20px}
.problem{background:#fef2f2;padding:60px 20px}
.problem h2{text-align:center;color:#991b1b;font-size:2rem;margin:0 0 40px}
.problem-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:25px;max-width:1100px;margin:0 auto}
.problem-item{background:#fff;padding:25px;border-radius:8px;border-left:4px solid #dc2626}
.problem-item h4{color:#991b1b;margin:0 0 10px;font-size:1.1rem}
.problem-item p{color:#4b5563;margin:0;font-size:.95rem}
.solution{background:#fff;padding:80px 20px}
.solution h2{text-align:center;font-size:2rem;margin:0 0 20px;color:#1f2937}
.solution .intro{text-align:center;max-width:700px;margin:0 auto 50px;color:#6b7280;font-size:1.1rem}
.services-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(320px,1fr));gap:30px}
.service{background:#f9fafb;padding:35px;border-radius:12px;border:2px solid #e5e7eb;transition:all .3s}
.service:hover{border-color:#3b82f6;transform:translateY(-5px);box-shadow:0 10px 30px rgba(59,130,246,.15)}
.service .icon{font-size:2.5rem;margin-bottom:15px}
.service h3{color:#1f2937;margin:0 0 12px;font-size:1.3rem}
.service ul{list-style:none;padding:0;margin:15px 0 0}
.service li{padding:8px 0;color:#4b5563;font-size:.95rem;padding-left:24px;position:relative}
.service li:before{content:"‚úì";position:absolute;left:0;color:#10b981;font-weight:700}
.pricing{background:#f9fafb;padding:80px 20px}
.pricing h2{text-align:center;font-size:2rem;margin:0 0 50px}
.pricing-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:35px;max-width:1100px;margin:0 auto}
.plan{background:#fff;padding:40px;border-radius:12px;border:3px solid #e5e7eb;position:relative;transition:all .3s}
.plan:hover{border-color:#3b82f6;box-shadow:0 15px 40px rgba(59,130,246,.2)}
.plan.featured{border-color:#3b82f6;box-shadow:0 10px 30px rgba(59,130,246,.15)}
.plan.featured .badge{position:absolute;top:-12px;right:20px;background:#3b82f6;color:#fff;padding:6px 16px;border-radius:20px;font-size:.8rem;font-weight:600}
.plan h3{font-size:1.5rem;margin:0 0 10px;color:#1f2937}
.plan .price{font-size:2rem;color:#3b82f6;font-weight:700;margin:15px 0}
.plan .price span{font-size:1rem;color:#6b7280;font-weight:400}
.plan ul{list-style:none;padding:0;margin:25px 0}
.plan li{padding:12px 0;border-bottom:1px solid #f3f4f6;color:#4b5563;padding-left:28px;position:relative}
.plan li:before{content:"‚úì";position:absolute;left:0;color:#10b981;font-weight:700;font-size:1.2rem}
.plan li:last-child{border:0}
.plan .cta-btn{display:block;width:100%;padding:16px;background:#3b82f6;color:#fff;text-align:center;border-radius:8px;text-decoration:none;font-weight:600;margin-top:25px;transition:background .3s}
.plan .cta-btn:hover{background:#2563eb}
.social-proof{background:#fff;padding:80px 20px;text-align:center}
.social-proof h2{font-size:2rem;margin:0 0 40px}
.testimonial{max-width:800px;margin:0 auto;background:#f9fafb;padding:40px;border-radius:12px;border-left:4px solid #3b82f6}
.testimonial p{font-size:1.15rem;color:#374151;font-style:italic;margin:0 0 20px;line-height:1.8}
.testimonial .author{font-weight:600;color:#1f2937;font-style:normal}
.testimonial .company{color:#6b7280;font-size:.9rem}
.guarantee{background:#ecfdf5;padding:60px 20px;text-align:center}
.guarantee h2{color:#065f46;font-size:2rem;margin:0 0 20px}
.guarantee p{max-width:700px;margin:0 auto;color:#047857;font-size:1.1rem;line-height:1.8}
.final-cta{background:linear-gradient(135deg,#1e40af 0%,#7c3aed 100%);color:#fff;padding:80px 20px;text-align:center}
.final-cta h2{font-size:2.2rem;margin:0 0 15px}
.final-cta p{font-size:1.2rem;opacity:.95;margin:0 0 35px;max-width:600px;margin-left:auto;margin-right:auto}
.final-cta .btn{display:inline-block;padding:18px 40px;background:#fff;color:#1e40af;border-radius:8px;text-decoration:none;font-weight:700;font-size:1.1rem;transition:all .3s}
.final-cta .btn:hover{transform:scale(1.05);box-shadow:0 10px 30px rgba(255,255,255,.3)}
@media(max-width:768px){.hero h1{font-size:2rem}.hero .subtitle{font-size:1.1rem}.section{padding:60px 20px}.services-grid,.pricing-grid{grid-template-columns:1fr}}
</style>

