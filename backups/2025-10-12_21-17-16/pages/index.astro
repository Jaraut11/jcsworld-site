<Base title="JCS - Professional Compliance Services | Delhi-NCR">
<style>
:root{--primary:#1e40af;--primary-dark:#1e3a8a;--secondary:#3b82f6;--accent:#10b981;--dark:#0f172a;--gray:#64748b;--light:#f8fafc}
*{margin:0;padding:0;box-sizing:border-box}
body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;color:var(--dark);line-height:1.6;-webkit-font-smoothing:antialiased}
html{scroll-behavior:smooth}

/* Hero */
.hero{background:linear-gradient(135deg,rgba(30,64,175,0.95),rgba(30,58,138,0.95)),url('https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=1920&q=80') center/cover;color:white;padding:8rem 1.5rem 6rem;text-align:center;min-height:85vh;display:flex;align-items:center;justify-content:center;position:relative;overflow:hidden}
.hero::before{content:'';position:absolute;top:0;left:0;right:0;bottom:0;background:radial-gradient(circle at top right,rgba(59,130,246,0.3),transparent);animation:pulse 4s ease-in-out infinite}
@keyframes pulse{0%,100%{opacity:1}50%{opacity:0.8}}
.hero-content{max-width:900px;margin:0 auto;animation:fadeInUp 1s ease}
@keyframes fadeInUp{from{opacity:0;transform:translateY(30px)}to{opacity:1;transform:translateY(0)}}
.hero h1{font-size:clamp(1.75rem,5vw,4rem);font-weight:800;margin-bottom:1rem;line-height:1.1}
.hero p{font-size:clamp(1rem,2.5vw,1.4rem);margin-bottom:2rem;opacity:0.95}
.hero-stats{display:flex;justify-content:center;gap:2rem;margin-top:2rem;flex-wrap:wrap}
.hero-stat{text-align:center}
.hero-stat-num{font-size:2rem;font-weight:900;display:block}
.hero-stat-label{font-size:0.9rem;opacity:0.9}

/* Button */
.btn{display:inline-block;padding:1rem 2rem;min-width:200px;min-height:48px;background:white;color:var(--primary);text-decoration:none;border-radius:8px;font-weight:700;font-size:1.05rem;transition:all 0.3s cubic-bezier(0.4,0,0.2,1);box-shadow:0 8px 20px rgba(0,0,0,0.2);text-align:center;position:relative;overflow:hidden}
.btn::before{content:'';position:absolute;top:50%;left:50%;width:0;height:0;border-radius:50%;background:rgba(59,130,246,0.3);transform:translate(-50%,-50%);transition:width 0.6s,height 0.6s}
.btn:hover::before{width:300px;height:300px}
.btn:hover{transform:translateY(-3px) scale(1.02);box-shadow:0 12px 30px rgba(0,0,0,0.3)}

/* Trust Bar */
.trust-bar{background:white;padding:2.5rem 1.5rem;box-shadow:0 -2px 15px rgba(0,0,0,0.08);margin-top:-2rem;position:relative;z-index:10}
.trust-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:2rem;max-width:1200px;margin:0 auto;text-align:center}
.trust-item{opacity:0;transform:translateY(20px);animation:fadeInItem 0.6s ease forwards}
.trust-item:nth-child(1){animation-delay:0.1s}
.trust-item:nth-child(2){animation-delay:0.2s}
.trust-item:nth-child(3){animation-delay:0.3s}
.trust-item:nth-child(4){animation-delay:0.4s}
@keyframes fadeInItem{to{opacity:1;transform:translateY(0)}}
.trust-item h3{font-size:clamp(2rem,6vw,3.5rem);font-weight:900;background:linear-gradient(135deg,var(--secondary),var(--primary));-webkit-background-clip:text;-webkit-text-fill-color:transparent}

/* Client Logos Section */
.client-logos{background:var(--light);padding:3rem 1.5rem;text-align:center;border-top:1px solid #e2e8f0;border-bottom:1px solid #e2e8f0}
.client-logos h3{font-size:0.85rem;font-weight:600;color:var(--gray);text-transform:uppercase;letter-spacing:0.1em;margin-bottom:2rem}
.logos-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(120px,1fr));gap:2rem;max-width:900px;margin:0 auto;align-items:center}
.logo-item{padding:1.5rem;background:white;border-radius:8px;display:flex;align-items:center;justify-content:center;height:80px;transition:all 0.3s;border:1px solid #e2e8f0}
.logo-item:hover{transform:translateY(-5px);box-shadow:0 8px 20px rgba(0,0,0,0.1)}
.logo-placeholder{font-weight:700;color:var(--gray);font-size:0.9rem}

/* Free Tools Section */
.tools-section{background:linear-gradient(135deg,var(--primary-dark),var(--primary));color:white;padding:4rem 1.5rem}
.tools-grid{display:grid;grid-template-columns:1fr;gap:1.5rem;max-width:1200px;margin:3rem auto 0}
.tool-card{background:rgba(255,255,255,0.1);backdrop-filter:blur(10px);padding:2rem;border-radius:12px;border:1px solid rgba(255,255,255,0.2);transition:all 0.3s;cursor:pointer}
.tool-card:hover{background:rgba(255,255,255,0.15);transform:translateY(-5px);box-shadow:0 10px 30px rgba(0,0,0,0.3)}
.tool-icon{font-size:2.5rem;margin-bottom:1rem}
.tool-card h3{font-size:1.3rem;margin-bottom:0.75rem;font-weight:700}
.tool-card p{opacity:0.9;font-size:0.95rem;margin-bottom:1rem}
.tool-cta{display:inline-block;padding:0.5rem 1.5rem;background:white;color:var(--primary);border-radius:6px;font-weight:600;text-decoration:none;font-size:0.9rem;transition:transform 0.3s}
.tool-cta:hover{transform:scale(1.05)}

/* Badge Bar */
.badge-bar{background:var(--light);padding:1.5rem;text-align:center}
.badge-bar p{color:var(--gray);font-weight:600;margin-bottom:1rem;text-transform:uppercase;font-size:0.75rem;letter-spacing:0.1em}
.badges{display:flex;justify-content:center;gap:0.75rem;flex-wrap:wrap}
.badge{background:white;padding:0.75rem 1.25rem;border-radius:6px;font-weight:700;color:var(--dark);border:2px solid #e2e8f0;font-size:0.8rem;transition:all 0.3s;position:relative;overflow:hidden}
.badge::before{content:'';position:absolute;top:-50%;left:-50%;width:200%;height:200%;background:linear-gradient(45deg,transparent,rgba(59,130,246,0.1),transparent);transform:rotate(45deg);transition:all 0.5s}
.badge:hover{border-color:var(--secondary);transform:translateY(-2px);box-shadow:0 4px 12px rgba(59,130,246,0.2)}
.badge:hover::before{left:100%}

/* Services */
.section{padding:3rem 1.5rem}
.container{max-width:1200px;margin:0 auto}
.section-header{text-align:center;margin-bottom:3rem;opacity:0;transform:translateY(30px);transition:all 0.8s ease}
.section-header.visible{opacity:1;transform:translateY(0)}
.section-header h2{font-size:clamp(1.75rem,5vw,2.75rem);font-weight:800;margin-bottom:0.75rem}
.section-header p{font-size:clamp(1rem,2.5vw,1.25rem);color:var(--gray);max-width:700px;margin:0 auto}
.services-grid{display:grid;grid-template-columns:1fr;gap:1.5rem}
.service{background:white;padding:2rem 1.5rem;border-radius:12px;border:2px solid #e2e8f0;transition:all 0.4s;position:relative;opacity:0;transform:translateY(30px)}
.service.visible{opacity:1;transform:translateY(0)}
.service::before{content:'';position:absolute;top:0;left:0;width:4px;height:0;background:linear-gradient(180deg,var(--secondary),var(--primary));transition:height 0.3s}
.service:hover::before{height:100%}
.service:hover{transform:translateY(-8px);box-shadow:0 20px 40px rgba(30,64,175,0.15);border-color:var(--secondary)}
.service-icon{width:60px;height:60px;background:linear-gradient(135deg,var(--secondary),var(--primary));border-radius:12px;display:flex;align-items:center;justify-content:center;margin-bottom:1.5rem;box-shadow:0 6px 18px rgba(59,130,246,0.3);transition:transform 0.3s}
.service:hover .service-icon{transform:scale(1.1) rotate(5deg)}
.service-icon svg{width:30px;height:30px;fill:white}
.service h3{font-size:1.4rem;margin-bottom:0.75rem;font-weight:700}
.service p{color:var(--gray);margin-bottom:1.25rem;line-height:1.6;font-size:0.95rem}
.service-link{color:var(--secondary);text-decoration:none;font-weight:700;display:inline-flex;align-items:center;gap:0.5rem;transition:gap 0.3s}
.service-link::after{content:'‚Üí';transition:transform 0.3s}
.service-link:hover{gap:1rem}
.service-link:hover::after{transform:translateX(4px)}

/* Case Studies Section */
.case-studies{background:var(--light);padding:4rem 1.5rem}
.case-grid{display:grid;grid-template-columns:1fr;gap:2rem;max-width:1200px;margin:2rem auto 0}
.case-card{background:white;padding:2rem;border-radius:12px;border:2px solid #e2e8f0;transition:all 0.3s}
.case-card:hover{transform:translateY(-5px);box-shadow:0 15px 35px rgba(0,0,0,0.1);border-color:var(--accent)}
.case-header{display:flex;justify-content:space-between;align-items:start;margin-bottom:1rem;flex-wrap:wrap;gap:1rem}
.case-title{font-size:1.3rem;font-weight:700;color:var(--dark)}
.case-result{font-size:2rem;font-weight:900;color:var(--accent)}
.case-desc{color:var(--gray);margin-bottom:1rem;line-height:1.6}
.case-client{font-size:0.85rem;color:var(--gray);font-style:italic}

/* Why Us */
.why-us{background:white}
.features-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:2rem}
.feature{text-align:center;opacity:0;transform:scale(0.9);transition:all 0.6s}
.feature.visible{opacity:1;transform:scale(1)}
.feature-icon{width:70px;height:70px;background:linear-gradient(135deg,var(--secondary),var(--primary));border-radius:50%;display:flex;align-items:center;justify-content:center;margin:0 auto 1rem;box-shadow:0 6px 20px rgba(59,130,246,0.25);font-size:2rem;color:white;transition:transform 0.3s}
.feature:hover .feature-icon{transform:scale(1.1) rotateY(360deg)}

/* Testimonials */
.testimonials{background:var(--dark);color:white;padding:3rem 1.5rem}
.testimonial-grid{display:grid;grid-template-columns:1fr;gap:1.5rem;max-width:1200px;margin:2rem auto 0}
.testimonial{background:rgba(255,255,255,0.05);padding:2rem 1.5rem;border-radius:12px;border:1px solid rgba(255,255,255,0.1);opacity:0;transform:translateY(30px);transition:all 0.6s}
.testimonial.visible{opacity:1;transform:translateY(0)}
.testimonial:hover{background:rgba(255,255,255,0.08);transform:translateY(-5px)}

/* CTA */
.cta-section{background:linear-gradient(135deg,var(--primary-dark),var(--primary));color:white;padding:4rem 1.5rem;text-align:center}
.cta-section h2{font-size:clamp(1.75rem,5vw,2.75rem);margin-bottom:1rem;font-weight:800}

/* WhatsApp Float */
.whatsapp-float{position:fixed;bottom:30px;right:30px;width:60px;height:60px;background:#25D366;border-radius:50%;display:flex;align-items:center;justify-content:center;box-shadow:0 4px 12px rgba(37,211,102,0.4);z-index:1000;animation:floatPulse 2s ease-in-out infinite;transition:transform 0.3s}
.whatsapp-float:hover{transform:scale(1.1)}
@keyframes floatPulse{0%,100%{transform:translateY(0)}50%{transform:translateY(-10px)}}
.whatsapp-float svg{width:30px;height:30px;fill:white}

/* Progress Bar */
.progress-bar{position:fixed;top:0;left:0;height:3px;background:linear-gradient(90deg,var(--secondary),var(--primary));z-index:1000;transition:width 0.3s}

/* Responsive */
@media (min-width:768px){
.hero{padding:10rem 2rem 8rem}
.section{padding:5rem 2rem}
.trust-grid{grid-template-columns:repeat(4,1fr)}
.services-grid{grid-template-columns:repeat(2,1fr)}
.features-grid{grid-template-columns:repeat(4,1fr)}
.testimonial-grid{grid-template-columns:repeat(2,1fr)}
.case-grid{grid-template-columns:repeat(2,1fr)}
.tools-grid{grid-template-columns:repeat(3,1fr)}
}
@media (min-width:1024px){
.services-grid{grid-template-columns:repeat(4,1fr)}
.testimonial-grid{grid-template-columns:repeat(3,1fr)}
}
