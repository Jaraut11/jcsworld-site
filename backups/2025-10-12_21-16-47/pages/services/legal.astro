---
import Base from '../../layouts/Base.astro';
---
<Base title="Legal Support Services - Labour Court, Consumer Court | JCS Delhi-NCR">
<style>
*{box-sizing:border-box}body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;line-height:1.6;color:#1f2937;margin:0;background:#fafafa}
.hero{background:linear-gradient(135deg,#7c3aed 0%,#a855f7 100%);color:#fff;padding:100px 20px 80px;text-align:center}
.hero h1{font-size:2.8rem;margin:0 0 20px;font-weight:700;line-height:1.2}
.hero .subtitle{font-size:1.3rem;opacity:.95;max-width:700px;margin:0 auto 30px;font-weight:400}
.container{max-width:1100px;margin:0 auto;padding:0 20px}
.section{padding:80px 20px}
.intro{background:#fff;padding:60px 20px;text-align:center}
.intro p{max-width:800px;margin:0 auto 30px;font-size:1.1rem;color:#4b5563;line-height:1.8}
.intro .partners{background:#f9fafb;padding:25px;border-radius:8px;max-width:700px;margin:0 auto;border-left:4px solid #a855f7}
.intro .partners strong{color:#7c3aed;display:block;margin-bottom:10px}
.services-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(320px,1fr));gap:30px;padding:80px 20px;background:#f9fafb}
.service{background:#fff;padding:35px;border-radius:12px;border:2px solid #e5e7eb;transition:all .3s}
.service:hover{border-color:#a855f7;transform:translateY(-5px);box-shadow:0 10px 30px rgba(168,85,247,.15)}
.service .icon{font-size:2.5rem;margin-bottom:15px}
.service h3{color:#1f2937;margin:0 0 12px;font-size:1.3rem}
.service p{color:#4b5563;font-size:.95rem;line-height:1.6}
.service ul{list-style:none;padding:0;margin:15px 0 0}
.service li{padding:8px 0;color:#4b5563;font-size:.95rem;padding-left:24px;position:relative}
.service li:before{content:"‚úì";position:absolute;left:0;color:#a855f7;font-weight:700}
.process{background:#fff;padding:80px 20px}
.process h2{text-align:center;font-size:2rem;margin:0 0 50px}
.process-steps{display:grid;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));gap:30px;max-width:1100px;margin:0 auto}
.step{background:#f9fafb;padding:30px;border-radius:8px;border-left:4px solid #a855f7}
.step .num{background:#a855f7;color:#fff;width:40px;height:40px;border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:700;margin-bottom:15px}
.step h4{color:#1f2937;margin:0 0 10px}
.step p{color:#6b7280;margin:0;font-size:.95rem}
.warning{background:#fef3c7;padding:60px 20px;text-align:center}
.warning h2{color:#92400e;font-size:2rem;margin:0 0 20px}
.warning p{max-width:800px;margin:0 auto;color:#78350f;font-size:1.1rem;line-height:1.8}
.final-cta{background:linear-gradient(135deg,#7c3aed 0%,#a855f7 100%);color:#fff;padding:80px 20px;text-align:center}
.final-cta h2{font-size:2.2rem;margin:0 0 15px}
.final-cta p{font-size:1.2rem;opacity:.95;margin:0 0 35px;max-width:600px;margin-left:auto;margin-right:auto}
.final-cta .btn{display:inline-block;padding:18px 40px;background:#fff;color:#7c3aed;border-radius:8px;text-decoration:none;font-weight:700;font-size:1.1rem;transition:all .3s}
.final-cta .btn:hover{transform:scale(1.05);box-shadow:0 10px 30px rgba(255,255,255,.3)}
@media(max-width:768px){.hero h1{font-size:2rem}.hero .subtitle{font-size:1.1rem}.section{padding:60px 20px}.services-grid,.process-steps{grid-template-columns:1fr}}
</style>

