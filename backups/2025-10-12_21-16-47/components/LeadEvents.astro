<script>
document.addEventListener('click', (e) => {
  const a = e.target.closest('a'); if(!a) return;
  if(a.href.includes('wa.me')) window.gtag && gtag('event','generate_lead',{method:'WhatsApp'});
  if(a.href.startsWith('tel:')) window.gtag && gtag('event','generate_lead',{method:'Phone'});
  if(a.href.endsWith('.pdf')) window.gtag && gtag('event','file_download',{file:a.href.split('/').pop()});
});
</script>
