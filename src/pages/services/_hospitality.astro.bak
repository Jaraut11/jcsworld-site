---
import Base from '../../layouts/Base.astro';
---
<Base title="Hospitality Staffing - Canteen, Housekeeping, Catering | JCS Delhi-NCR">
<style>
*{box-sizing:border-box}body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;line-height:1.6;color:#1f2937;margin:0;background:#fafafa}
.hero{background:linear-gradient(135deg,#ea580c 0%,#f97316 100%);color:#fff;padding:100px 20px 80px;text-align:center}
.hero h1{font-size:2.8rem;margin:0 0 20px;font-weight:700;line-height:1.2}
.hero .subtitle{font-size:1.3rem;opacity:.95;max-width:700px;margin:0 auto 30px;font-weight:400}
.container{max-width:1100px;margin:0 auto;padding:0 20px}
.section{padding:80px 20px}
.services-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(320px,1fr));gap:30px;padding:80px 20px;background:#fff}
.service{background:#f9fafb;padding:35px;border-radius:12px;border:2px solid #e5e7eb;transition:all .3s}
.service:hover{border-color:#f97316;transform:translateY(-5px);box-shadow:0 10px 30px rgba(249,115,22,.15)}
.service .icon{font-size:2.5rem;margin-bottom:15px}
.service h3{color:#1f2937;margin:0 0 12px;font-size:1.3rem}
.service p{color:#4b5563;font-size:.95rem;line-height:1.6;margin-bottom:15px}
.service ul{list-style:none;padding:0;margin:15px 0 0}
.service li{padding:8px 0;color:#4b5563;font-size:.95rem;padding-left:24px;position:relative}
.service li:before{content:"‚úì";position:absolute;left:0;color:#f97316;font-weight:700}
.guarantee{background:#f0fdfa;padding:60px 20px;text-align:center}
.guarantee h2{color:#0f766e;font-size:2rem;margin:0 0 20px}
.guarantee p{max-width:700px;margin:0 auto;color:#115e59;font-size:1.1rem;line-height:1.8}
.final-cta{background:linear-gradient(135deg,#ea580c 0%,#f97316 100%);color:#fff;padding:80px 20px;text-align:center}
.final-cta h2{font-size:2.2rem;margin:0 0 15px}
.final-cta p{font-size:1.2rem;opacity:.95;margin:0 0 35px;max-width:600px;margin-left:auto;margin-right:auto}
.final-cta .btn{display:inline-block;padding:18px 40px;background:#fff;color:#ea580c;border-radius:8px;text-decoration:none;font-weight:700;font-size:1.1rem;transition:all .3s}
.final-cta .btn:hover{transform:scale(1.05);box-shadow:0 10px 30px rgba(255,255,255,.3)}
@media(max-width:768px){.hero h1{font-size:2rem}.hero .subtitle{font-size:1.1rem}.section{padding:60px 20px}.services-grid{grid-template-columns:1fr}}
</style>

