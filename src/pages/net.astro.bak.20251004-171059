---
/** Simple debug page to confirm deploy/runtime on Vercel/Astro.
 * Shows method and a few headers (no secrets). Safe to keep.
 */
const req = Astro.request;
const ua = req.headers.get('user-agent') || '';
const ip = req.headers.get('x-forwarded-for') || req.headers.get('x-real-ip') || 'â€”';
const host = req.headers.get('host') || '';
const method = req.method;
const url = req.url;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Net Check</title>
    <meta name="robots" content="noindex, nofollow" />
