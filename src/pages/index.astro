---
import Layout from '../layouts/Base.astro';
import ProcessScroller from '../components/ProcessScroller.astro';
import LogoSlider from '../components/LogoSlider.astro';
---
<Layout title="MSME Accounts, HR & Compliance — done right | JCS World">
  <!-- HERO -->
  <section class="section hero-wrap reveal">
    <img class="hero-media" src="/hero-poster.jpg" alt="">
    <div class="hero-gradient"></div>
    <p class="kicker">Outsourced MSME partner</p>
    <h1 class="h1">MSME <span class="brand-gradient">Accounts, HR & Compliance</span> — done right.</h1>
    <p class="lead">End-to-end bookkeeping, payroll (PF/ESI), GST & ROC filings, and legal support—so you can focus on growth.</p>
    <p style="margin-top:1rem">
      <a href="/services/" class="btn">Explore Services</a>
      <a href="/contact/" class="btn secondary" style="margin-left:.5rem">Get a Proposal</a>
    </p>
  </section>

  <!-- STATS -->
  <section class="section">
    <div class="stats">
      <div class="stat reveal"><div class="num"><span data-count="15">0</span>+ yrs</div><div class="label">Experience</div></div>
      <div class="stat reveal"><div class="num"><span data-count="60">0</span>+</div><div class="label">Clients</div></div>
      <div class="stat reveal"><div class="num"><span data-count="12">0</span>+</div><div class="label">Industries</div></div>
    </div>
  </section>

  <!-- SERVICES HIGHLIGHTS -->
  <section class="section">
    <div class="grid cols-3">
      <article class="card reveal" data-speed="0.6">
        <h3>Accounting & Tax</h3>
        <p>Monthly books, reconciliations, MIS, ITR/TDS, audit support—kept tidy, timely and review-ready.</p>
      </article>
      <article class="card reveal" data-speed="0.8">
        <h3>HR & Payroll</h3>
        <p>Payroll processing, payslips, PF/ESI registration & monthly filings, HR policy & onboarding docs.</p>
      </article>
      <article class="card reveal" data-speed="1.0">
        <h3>Compliance</h3>
        <p>Shops & Establishments, Factory Act, FSSAI, Fire/Pollution, Trade, ISO, MSME/Udyam, IEC & more.</p>
      </article>
    </div>
  </section>

  <!-- LOGO SLIDER -->
  <LogoSlider />

  <!-- PINNED PROCESS -->
  <ProcessScroller />

  <!-- CTA -->
  <section class="section reveal" style="text-align:center">
    <h2 class="h1" style="font-size:2rem">Get reliable compliance and clean books.</h2>
    <p class="lead" style="margin:0 auto 1rem">Tell us your volume and locations—get a tailored monthly plan today.</p>
    <a href="/contact/" class="btn">Request a Proposal</a>
  </section>
</Layout>
