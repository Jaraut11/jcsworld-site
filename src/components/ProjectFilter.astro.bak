---
const cats = ['all','gst','income-tax','payroll','advisory'];
const cards = [
  { title: 'Retail GST Rescue', cats: ['gst'] },
  { title: 'Startup Payroll Setup', cats: ['payroll'] },
  { title: 'Legacy ITR Cleanup', cats: ['income-tax'] },
  { title: 'CFO Advisory Sprint', cats: ['advisory'] },
  { title: '3B Reconciliation', cats: ['gst'] }
];
---
<section class="projects r" data-project-filter>
  <div class="chips">
    {cats.map(c => <button type="button" class={c==='all'?'is-active':''} data-chip={c}>{c.replace('-',' ').toUpperCase()}</button>)}
  </div>
  <div class="grid">
    {cards.map(c => (
      <article class="card fade r" data-card data-cats={c.cats.join(',')}>
        <h5>{c.title}</h5>
        <p class="meta">{c.cats.join(' â€¢ ')}</p>
      </article>
    ))}
  </div>
  <style>
    .chips{display:flex;flex-wrap:wrap;gap:.5rem;margin-bottom:1rem}
    .chips button{padding:.5rem .75rem;border-radius:999px;border:1px solid rgba(0,0,0,.12);background:transparent}
    .chips button.is-active{background:var(--surface, rgba(0,0,0,.06))}
    .grid{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:1rem}
    .card{border:1px solid rgba(0,0,0,.08);border-radius:12px;padding:1rem}
    .meta{opacity:.6;margin:.5rem 0 0}
    @media (max-width:900px){.grid{grid-template-columns:1fr}}
  </style>
</section>
