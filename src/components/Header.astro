---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---
<header class="site-header" style="border-bottom:1px solid #eee;">
  <nav class="nav" style="display:flex;align-items:center;justify-content:space-between;gap:1rem;min-height:64px;padding:0 1rem;">
    <h2 style="margin:0;font-weight:800;font-size:1.1rem;"><a href="/" style="text-decoration:none;color:inherit">{SITE_TITLE}</a></h2>
    <div class="internal-links" style="display:flex;gap:1rem;align-items:center">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/services/">Services</HeaderLink>
      <HeaderLink href="/pricing/">Pricing</HeaderLink>
      <HeaderLink href="/about/">About</HeaderLink>
      <HeaderLink href="/blog/">Blog</HeaderLink>
      <HeaderLink href="/contact/">Contact</HeaderLink>
      <a href="/contact/" class="btn" style="display:inline-block;padding:.45rem .8rem;border-radius:10px;border:1px solid currentColor">Get Proposal</a>
    </div>
  </nav>
</header>
