---
const text = 'Hi JCS Team, I would like a free audit.';
const href = `https://wa.me/918920152372?text=${encodeURIComponent(text)}`;
---
<style>
.wa-float{position:fixed;right:16px;bottom:16px;z-index:60}
.wa-float a{display:inline-block;background:#22c55e;color:#052e12;padding:14px 16px;border-radius:999px;text-decoration:none;font-weight:800;box-shadow:0 6px 18px rgba(0,0,0,.25)}
@media(min-width:901px){.wa-float{display:none}}
</style>
<div class="wa-float">
  <a href={href} aria-label="WhatsApp us"
     onClick="window.gtag&&gtag('event','wa_click',{location:document.location.pathname,position:'float'});">WhatsApp</a>
</div>
