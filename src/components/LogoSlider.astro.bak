---
/* Simple infinite slider. Put logo PNG/SVG files in /public/logos (e.g., logo1.png ... logo6.png). */
const logos = [
  '/logos/logo1.png','/logos/logo2.png','/logos/logo3.png',
  '/logos/logo4.png','/logos/logo5.png','/logos/logo6.png'
];
---
<section class="logo-strip reveal" aria-label="Trusted by">
  <div class="kicker">Trusted by MSMEs</div>
  <div class="track">
    {logos.map((src) => <img src={src} alt="" loading="lazy" />)}
    {logos.map((src) => <img src={src} alt="" loading="lazy" />)}
  </div>

  <style>
    .logo-strip{padding:2rem 0;border-block:1px solid #eee;margin:1rem 0}
    .logo-strip .kicker{margin-bottom:.75rem}
    .track{display:flex;gap:2.5rem;overflow:hidden;white-space:nowrap;
           animation:scroll 20s linear infinite; align-items:center}
    .track img{height:32px;opacity:.75;filter:grayscale(100%);transition:opacity .2s}
    .track img:hover{opacity:1;filter:none}
    @keyframes scroll {
      from { transform:translateX(0) }
      to   { transform:translateX(-50%) }
    }
  </style>
</section>
