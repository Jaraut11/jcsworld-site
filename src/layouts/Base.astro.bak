---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWA from '../components/FloatingWA.astro';
import SchemaLocalBusiness from '../components/SchemaLocalBusiness.astro';

const {
  title = 'Accounts, Payroll & Compliance for MSMEs | JCS Delhi-NCR',
  description = 'Zero-penalty compliance. GST/TDS/ITR, payroll PF/ESI, legal coordination via partner advocates.',
  ogTitle = undefined,
  ogDescription = undefined,
} = Astro.props;

const SITE = Astro.site || new URL('https://www.jcsworld.in');
const CANON = new URL(Astro.url.pathname, SITE).toString();

// GA ID priority: env var GA_MEASUREMENT_ID (optional)
const GA = import.meta.env.GA_MEASUREMENT_ID || '';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={CANON} />

  <meta property="og:type" content="website" />
  <meta property="og:title" content={ogTitle ?? title} />
  <meta property="og:description" content={ogDescription ?? description} />
  <meta property="og:url" content={CANON} />
  <meta property="og:image" content="https://www.jcsworld.in/og-image.jpg" />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={ogTitle ?? title} />
  <meta name="twitter:description" content={ogDescription ?? description} />
  <meta name="twitter:image" content="https://www.jcsworld.in/og-image.jpg" />

  <link rel="icon" href="/favicon.ico" />

  <SchemaLocalBusiness />

  {GA && (
    <>
      <script async src={"https://www.googletagmanager.com/gtag/js?id="+GA}></script>
      <script>
        {`window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date()); gtag('config','${GA}');`}
      </script>
    </>
  )}
  <!-- @motion-assets -->
  <link rel="stylesheet" href="/css/motion.css">
  <script defer src="/js/motion.js"></script>
  <!-- @layout-basics -->
  <link rel="stylesheet" href="/css/layout-basics.css">
  <link rel="stylesheet" href="/css/jcs-tweaks.css">
  <link rel="stylesheet" href="/css/jcs-theme.css">
</head>
<body>
  <Header />
  <main>
      <slot />
  </main>
  <Footer />
  <FloatingWA />
</body>
</html>
