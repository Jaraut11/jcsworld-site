---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = Astro.props.title || "JCS - Accounts, HR & Compliance for MSMEs | Delhi-NCR";
const description = Astro.props.description || "Complete GST, TDS, ITR, Payroll, PF/ESI, Legal & Hospitality services for businesses in Delhi-NCR. 15+ years experience. Book free consultation.";
const canonicalURL = new URL(Astro.url.pathname, 'https://www.jcsworld.in');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:image" content="https://www.jcsworld.in/hero.jpg" />
  
  <script type="application/ld+json" is:inline>
  {
    "@context": "https://schema.org",
    "@type": "ProfessionalService",
    "name": "Jaraut Consultancy Services",
    "image": "https://www.jcsworld.in/hero.jpg",
    "description": "Complete GST, TDS, ITR, Payroll, PF/ESI, Legal & Hospitality services for businesses in Delhi-NCR. 15+ years experience.",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "503, Suneja Tower-2, Distt. Centre",
      "addressLocality": "Janakpuri",
      "addressRegion": "Delhi",
      "postalCode": "110058",
      "addressCountry": "IN"
    },
    "telephone": "+91-11-41745010",
    "email": "jcsworld.in@gmail.com",
    "url": "https://www.jcsworld.in",
    "priceRange": "₹₹",
    "areaServed": "Delhi-NCR"
  }
  </script>
  
  <link rel="stylesheet" href="/global.css">
</head>
<body>
  <Header />
  <slot />
  <Footer />
</body>
</html>
